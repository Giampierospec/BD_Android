<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.giamp.bd.BD">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/ed1"
        android:layout_centerHorizontal="true"
        android:hint="Introduce cualquier texto"
        android:inputType="text"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="250dp"
        android:layout_below="@+id/ed1"
        android:text="Guardar en BD"
        android:layout_centerHorizontal="true"
        android:id="@+id/gbd"
        />
    <Button
        android:layout_height="50dp"
        android:layout_width="250dp"
        android:layout_below="@+id/gbd"
        android:text="Reporte de BD"
        android:layout_centerHorizontal="true"
        android:id="@+id/rbd"
        />
    <Button
        android:layout_height="50dp"
        android:layout_width="250dp"
        android:layout_below="@+id/rbd"
        android:text="Borrar BD"
        android:layout_centerHorizontal="true"
        android:id="@+id/dbd"

        />


    <ListView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/dbd"
        android:id="@+id/lv"
        />





</RelativeLayout>
